<tr>
  <td class="supp">
    <%= link_to "x", cart_item_path(item), class: "btn-supp", remote: true, method: :delete, data: { confirm: "Êtes-vous sûr ?"} %>
  </td>
  <td class="img"><div class="visuel"><%= image_tag item.cartable.workshop_event.workshop.main_picture %></div></td>
  <td class="titre">
    <%= link_to workshop_path(item.cartable.workshop_event.workshop), class: "data" do %>
      <h3><%= item.cartable.workshop_event.workshop.title %></h3>
      <p class="date"><%= l item.cartable.workshop_event.start_time, format: :event %></p>
    <% end %>
  </td>
  <td class="prix"><h3><%= short_number_to_currency(Money.new(item.cartable.price_cents)) %></h3></td>
  <td class="cpt">
    <div class="compteur flex">
      <label><%= item.quantity %> x Tarif <%= t("activerecord.attributes.workshop_price.categories.#{item.cartable.price_category}") %></label>
    </div>
  </td>
  <td class="prix-total center"><h2><%= short_number_to_currency(Money.new(item.amount_cents)) %></h2></td>
</tr>
