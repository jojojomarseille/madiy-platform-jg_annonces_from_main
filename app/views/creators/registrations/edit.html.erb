<section class="section-header-content">
	<div class="section-content">
		<h1>Mon compte créateur</h1>
	</div>
</section>

<section class="section-login section-padding">
	<div class="section-content">
		<div class="form-container flex">
			
				
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-connexion form-DIY' }) do |f| %>
      <h3 class="souligne">Je modifie mon mot de passe</h3>
      <%= render "creators/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field line">
    <%= f.label :password %> <i>(Indiquez ici votre nouveau mot de passe)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères minimum dont 1 majuscule, 1 minuscule, 1 caractere spécial et 1 chiffre</em>
    <% end %>
  </div>

  <div class="field line">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field line">
    <%= f.label :current_password, 'Mot de passe actuel'%> <i>(Nous avons besoin de votre mot de passe actuel pour confirmer votre changement)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre a jour", class:"btn-submit btn-cta"%>
  </div>
<% end %>
		</div>
	</div>
</section>
