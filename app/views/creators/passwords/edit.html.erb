<section class="section-header-content">
  <div class="section-content">
    <h1>Réinitialisation du mot de passe</h1>
  </div>
</section>

<section class="section-login section-padding">
  <div class="section-content">
    <div class="form-container flex">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {  class: "form-connexion form-DIY", method: :put }) do |f| %>
        <%= render "creators/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="line">
          <%= f.label :password, "Nouveau mot de passe" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractères minimum dont 1 majuscule, 1 minuscule, 1 caractere spécial et 1 chiffre )</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="line">
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="btn-container">
          <%= f.submit "Changer mon mot de passe" , class: 'btn-submit btn-cta'%>
        </div>
      <% end %>

    </div>
  </div>
</section>

