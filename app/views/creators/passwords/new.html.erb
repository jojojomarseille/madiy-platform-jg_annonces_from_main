<section class="section-header-content">
  <div class="section-content">
    <h1>Mon compte créateur</h1>
  </div>
</section>
<section class="section-login section-padding">
  <div class="section-content">
    <div class="form-container">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-connexion form-DIY"}) do |f| %>
        <%= render "creators/shared/error_messages", resource: resource %>
        <h3>Vous avez oublié votre mot de passe?</h3>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Envoyez les instructions de réinitialisation", class:"btn-submit btn-cta"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
