<section class="section-login section-padding">
  <div class="section-content">
    <div class="form-container flex">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-connexion form-DIY", method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="line">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mail' %>
        </div>

        <div class="btn-container">
          <%= f.submit "Recevoir les instructions de changement", class: 'btn-submit btn-cta' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
